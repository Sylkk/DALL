<!DOCTYPE html>
<html>

<% include partials/_header %>

<body class="">

    <div id="wrapper">

        <!-- LEFT Navigation bar -->
        <% include partials/_left_navbar %>
        <!-- END OF LEFT Navigation bar -->

        <!-- PAGE WRAPPER -->
        <div id="page-wrapper" class="gray-bg">
            <!-- TOP NAV BAR -->
            <% include partials/_top_navbar %>
            <!-- END TOP NAV BAR -->

            <!-- TITLE BAR + BREADCRUMB -->
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-sm-4">
                    <h2><%= title %></h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/home">Home</a>
                        </li>
                        <li>
                            <a href="/admin">Admin</a>
                        </li>
                        <li class="active">
                            <strong><%= title %></strong>
                        </li>
                    </ol>
                </div>
                <div class="col-sm-8">
                    <div class="title-action">
                        <button type="submit" id="top_btn_addApply" class="btn btn-primary">Add New Apply</button>
                    </div>
                </div>
            </div>
            <!-- END TITLE BAR -->

            <!-- CONTENT BAR -->
            <div class="wrapper wrapper-content">
                
                <!-- Contact Form -->
                <% var lorem = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum ";
                %>
                <div class="row">
                    <div class="span9">

                        <form role="form" id="contact-form" class="form-horizontal" method="POST" action="/test_addApply">
                            
                           
                            <p class="">
                                <input id="contact_email" class="form-control" type="text" placeholder="Adresse Email de contact" value="kivan43@yahoo.fr" name="contact_email" />
                            </p>

                            <p class="">
                                <input id="contact_btag" class="form-control" type="text" placeholder="Battle Tag" value="sylkk#2415" name="contact_btag" />
                            </p>

                            <p class="form-inline">
                                <div>
                                    <label class="radio-inline">
                                        <input type="radio" name="role" value="DPS" checked/>
                                        DPS
                                    </label>
                                </div>
                                <div>
                                    <label class="radio-inline">
                                        <input type="radio" name="role" value="TANK" />
                                    TANK
                                    </label>
                                </div>
                                <div>
                                    <label class="radio-inline">
                                        <input type="radio" name="role" value="HEAL" />
                                        HEAL
                                    </label>
                                </div>

                            </p>

                            <br/>
                            <p class="presentation">
                                <textarea id="presentation" class="form-control" placeholder="Présentez-vous" name="presentation" rows="5" cols="40">
Présentation - <%= lorem %>
                                </textarea>
                            </p>


                            <p class="lien_armu">
                                <input id="lien_armu" class="form-control" type="text" placeholder="Lien armurie" value="http://eu.battle.net/wow/en/character/ysondre/S%C3%AFlkh/simple" name="lien_armu"/>
                            </p>

                            <p class="date_play">
                                <input id="date_play" class="form-control" type="text" placeholder="Depuis combien de temps jouez-vous ?" value="5 ans depuis Woltk" name="date_play"/>
                            </p>

                            <p class="xp_pve">
                                <textarea id="xp_pve" class="form-control" placeholder="Expérience PVE" name="xp_pve" rows="10" cols="40">
xp pve - <%= lorem %> 
list1
list2
list3
list4
list5

test ligne fin
                                </textarea>
                            </p>

                            <p class="motivation">
                                <div class="labeled-apply hide" >Votre Motivation</div>
                                <textarea id="motivation" class="form-control" placeholder="Quelles sont vos motivations pour entrer dans la guilde" name="motivation" rows="5" cols="40">
Motivation - <%= lorem %>
                                </textarea>
                            </p>

                            <p class="old_guild">
                                <div class="labeled-apply hide" >Anciennes guildes</div>
                                <textarea id="old_guild" class="form-control" placeholder="Vos anciennes guildes" name="old_guild" rows="3" cols="40">
Anciennes guildes - <%= lorem %>
                                </textarea>
                            </p>

                            <p class="interface">
                                <div class="labeled-apply hide" >Interface</div>
                                <textarea id="interface" class="form-control" placeholder="Un screen de votre interface + liste de vos addons" name="interface" rows="3" cols="40">
Interface - <%= lorem %> - http://i.imgur.com/iC07Gyh.jpg
                                </textarea>
                            </p>

                            <p class="tc">
                                <textarea id="tc" class="form-control" placeholder="Off spec / ilvl de l'off spec + Theorycraft de votre/vos persos" name="tc" rows="10" cols="40">
Offspé - <%= lorem %>
                                </textarea>
                            </p>

                            <p class="reroll">
                                <textarea id="reroll" class="form-control" placeholder="Vos rerolls (classe + lien armu) si vous en avez" name="reroll" rows="4" cols="40">
Reroll - <%= lorem %>
                                </textarea>
                            </p>

                            <div>
                                <button id="contact-submit" class="btn btn-white" type="submit">Envoyer la candidature</button>
                            </div>

                            <br/>

                            <div id="response" class="">
                            </div>

                        </form>
                    </div>
                </div>
                <!-- End Contact Form -->
                

            </div>
            <!-- END CONTENT BAR -->

            <!-- FOOTER BAR -->
            <% include partials/_footer %>
            <!-- END FOOTER BAR -->
        </div>
        <!-- END PAGE WRAPPER -->
        
    </div>

    <!-- Mainly scripts -->
    <script src="/js/jquery-2.1.1.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="/js/inspinia.js"></script>
    <script src="/js/plugins/pace/pace.min.js"></script>
    
    <% include partials/_miscjs %>
    
    <script>
        $("#top_btn_addApply").click(function(){
            $("#contact-submit").click();
        });
    </script>
    
    <script>
        $("textarea").focusin(function(){
            $(this).parent().children(".labeled-apply").removeClass('hide');
        });
        $("textarea").focusout(function(){
            $(this).parent().children(".labeled-apply").addClass('hide');
        });
    </script>

</body>

</html>