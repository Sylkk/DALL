                if(j==1) ret += ' Marksmanship';
                if(j==2) ret += ' Survival';
                ret += '</span><br>';
            break;
            case 4:
                ret += '<img src="/onePage/assets/img/class_icon/_mage.png" width="16"><span style="color:#69CCF0">'
                if(j==0) ret += ' Frost';
                if(j==1) ret += ' Fire';
                if(j==2) ret += ' Arcane';
                ret += '</span><br>';
            break;
            case 5:
