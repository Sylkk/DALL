                ret += '</span><br>';
            break;
            case 9:
                ret += '<img src="/onePage/assets/img/class_icon/_sham.png" width="16"><span style="color:#0070DE">'
                if(j==0) ret += ' Enhancement';
                if(j==1) ret += ' Elemental';
                if(j==2) ret += ' Restoration';
                ret += '</span><br>';
            break;
            case 10:
                ret += '<img src="/onePage/assets/img/class_icon/_warlock.png" width="16"><span style="color:#9482C9">'
                if(j==0) ret += ' Affliction';
                if(j==1) ret += ' Demonology';
                if(j==2) ret += ' Destruction';
                ret += '</span><br>';
            break;
            case 11:
                ret += '<img src="/onePage/assets/img/class_icon/_war.png" width="16"><span style="color:#C79C6E">'
                if(j==0) ret += ' Protection';
                if(j==1) ret += ' Fury';
                if(j==2) ret += ' Arms';
